prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include
supported_protocols="HTTP HTTPS SCP SFTP WS WSS"
supported_features="alt-svc AsynchDNS brotli HSTS HTTP2 HTTPS-proxy IDN IPv6 Largefile libz NTLM PSL SSL threadsafe TLS-SRP UnixSockets zstd"

Name: libcurl
URL: https://curl.se/
Description: Library to transfer files with HTTP, FTP, etc.
Version: 8.13.0
Requires: 
Requires.private: libssh2,libidn2,openssl,zlib,libbrotlidec,libbrotlicommon,libzstd,libnghttp2,libpsl
Libs: -L${libdir} -lcurl 
Libs.private: -L/home/kaustubh/vcpkg/installed/x64-linux/debug/lib -L/home/kaustubh/vcpkg/installed/x64-linux/lib -lssh2 -lidn2 -lssl -lcrypto -lz -lbrotlidec -lbrotlicommon -lzstd -lnghttp2 -lpsl
Cflags: -I${includedir} 
Cflags.private: -DCURL_STATICLIB
